# i3status config (minimal, clean)
general {
    colors = true
    interval = 1
    color_good = "#00ff00"
    color_bad = "#ff0000"
    output_format = "i3bar"
}

# Requested order:
# brightness, volume, battery, wifi, cpu usage, gpu usage, ram usage, temp, time
order += "read_file brightness"
order += "read_file volume_placeholder"
order += "battery BAT0"
order += "wireless _first_"
order += "cpu_usage"
order += "read_file gpu_placeholder"
order += "memory"
order += "cpu_temperature 6"
order += "tztime local"

wireless _first_ {
    # Wi label + connection state; colors from color_good/color_bad
    format_up = "Wi: CON"
    format_down = "Wi: DIS"
}

battery BAT0 {
    format = "BAT: %percentage"
    format_down = "BAT: n/a"
    last_full_capacity = true
    integer_battery_capacity = true
    low_threshold = 15
}

read_file volume_placeholder {
    path = "/proc/asound/cards"
    format = "V: n/a"
}

memory {
    # R for RAM
    format = "R: %used"
    threshold_degraded = "10%"
    format_degraded = "R: %used"
}

cpu_usage {
    # C for CPU
    format = "C: %usage"
}

# T for Temperature (CPU). Adjust index (0/1/...) if needed for your system.
cpu_temperature 6 {
    format = "T: %degreesÂ°C"
}

# B for Brightness (raw value from sysfs). Replace path with your backlight device.
read_file brightness {
    path = "/sys/class/backlight/intel_backlight/brightness"
    format = "BRI: %content/19200"
}

// GPU removed (no sysfs metric available on this system)
read_file gpu_placeholder {
    path = "/proc/uptime"
    format = "G: n/a"
}

 tztime local {
    format = "%a %-d %b %Y %-I:%M:%S%p"
}
