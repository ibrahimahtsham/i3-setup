# i3status config (minimal, clean)
general {
    colors = true
    interval = 1
    color_good = "#a3be8c"
    color_degraded = "#ebcb8b"
    color_bad = "#bf616a"
}

order += "wireless _first_"
order += "battery all"
order += "volume master"
order += "disk /"
order += "memory"
order += "cpu_usage"
order += "load"
order += "tztime local"

wireless _first_ {
    format_up = "W: %quality %essid %ip"
    format_down = "W: down"
}

battery all {
    format = "BAT: %percentage %remaining"
    format_down = "BAT: n/a"
    last_full_capacity = true
    integer_battery_capacity = true
    low_threshold = 15
}

volume master {
    format = "VOL: %volume"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

disk "/" {
    format = "SSD: %avail"
}

memory {
    format = "RAM: %used (%available)"
    threshold_degraded = "10%"
    format_degraded = "RAM: %used"
}

cpu_usage {
    format = "CPU: %usage%%"
}

load {
    format = "LD: %1min"
}

tztime local {
    format = "%a %b %d %H:%M"
}
